<Window x:Class="DAUpdater.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DAUpdater"
        mc:Ignorable="d"
        Title="Dayz Awaken Launcher" Height="350" Width="525"
        Background="Black">
    <Grid>
        <Image x:Name="Image1_png" Margin="10,10,131,225" Source="Image1.png" Stretch="Fill"/>
        <Button x:Name="launchButton" Content="Launch" Margin="0,0,10,10" Height="20" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="75" Click="launchButton_Click"/>
        <Button x:Name="settingsButton" Content="Settings" Margin="0,0,10,60" Click="settingsButton_Click" HorizontalAlignment="Right" Width="75" Height="20" VerticalAlignment="Bottom"/>
        <Button x:Name="checkFilesButton" Content="Check Files" Margin="0,0,10,35" Height="20" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="75" Click="checkFilesButton_Click"/>
        <ProgressBar x:Name="progressBar" Margin="10,0,90,35" Height="20" VerticalAlignment="Bottom"/>
        <TextBox x:Name="progressBox" IsReadOnly="True" TextAlignment="Center" Margin="10,0,90,10" TextWrapping="Wrap" Text="" Height="20" VerticalAlignment="Bottom"/>

    </Grid>
</Window>
